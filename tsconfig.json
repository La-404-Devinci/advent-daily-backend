{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": [
            "types",
            "./node_modules/@types",
            "../node_modules/@types" // for docker test environment
        ],
        "resolveJsonModule": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "types": ["jest", "node"],
        "skipDefaultLibCheck": true,

        "sourceMap": true
    },
    "exclude": ["node_modules", "dist"]
}
