{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["types", "./node_modules/@types", "../node_modules/@types"],
        "resolveJsonModule": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "types": ["node"],
        "skipDefaultLibCheck": false,

        "removeComments": true
    },
    "exclude": ["node_modules", "dist", "tests", "scripts", "jest.config.ts"]
}
